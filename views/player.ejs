<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item">
                <img class="image is-64x64"
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT9RH-zdVpPGuiO0ycb5wcm9a1WQvKpVQsKdw&usqp=CAU ">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/nations">
                    Nations
                </a>

                <a class="navbar-item">
                    Players
                </a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light">
                            Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="columns">
            <div class="column is-three-fifths">
                <table class="table is-striped">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Club</th>
                            <th>Postions</th>
                            <th>Captain</th>
                            <th>Goals</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% players.forEach(function(player){ %>
                            <tr>
                                <td>
                                    <figure class="image is-128x128">
                                        <img src=<%=player.image %> >
                                    </figure>
                                </td>
                                <td>
                                    <%= player.name %>
                                </td>
                                <td>
                                    <%= player.club %>
                                </td>
                                <td>
                                    <%= player.position %>
                                </td>
                                <td>
                                    <%= player.isCaptain %>
                                </td>
                                <td>
                                    <%= player.goals %>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="button" data-toggle="dropdown">
                                            üîª
                                        </button>
                                        <div class="dropdown-menu" id="dropdown-menu" role="menu" aria-hidden="true"
                                            aria-labelledby="dropdownButton">
                                            <div class="dropdown-content">
                                                <a class="dropdown-item" href="/players/edit/<%= player._id %>" >
                                                    üìù Edit</a>
                                                <a class="dropdown-item" href="/players/delete/<%= player._id %>"
                                                    onclick="return confirm('Are you sure you want to delete <%= player.name %>?');">
                                                    ‚úñÔ∏è Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
            <div class="column">
                <form method="post">
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Name</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-info" name="name" type="text" placeholder="e.g. Ronaldo"
                                        required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Club</label>
                        </div>
                        <div class="field-body">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select name="club">
                                            <%for (let club of clubList) { %>
                                                <option value="<%= club.name %>">
                                                    <%= club.name %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Position</label>
                        </div>
                        <div class="field-body">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select name="position">
                                            <%for (let position of positionData) { %>
                                                <option value="<%= position.name %>">
                                                    <%= position.name %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Image</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-info" name="image" type="text" placeholder="URL of image"
                                        required>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Goals</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-info" name="goals" type="number" min="0"
                                        placeholder="number of goals" required>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Captain</label>
                        </div>
                        <div class="field-body">
                            <div class="field is-narrow">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select name="isCaptain">
                                            <%for (let captain of isCaptainData) { %>
                                                <option value="<%= captain.name %>">
                                                    <%= captain.name %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <button class="button is-primary" type="submit">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get all dropdowns on the page
        var $dropdowns = getAll('.dropdown:not(.is-hoverable)');

        // Initialize dropdowns
        if ($dropdowns.length > 0) {
            $dropdowns.forEach(function ($el) {
                $el.addEventListener('click', function (event) {
                    event.stopPropagation();
                    $el.classList.toggle('is-active');
                });
            });

            // Close dropdowns when clicking outside
            document.addEventListener('click', function (event) {
                closeDropdowns();
            });
        }

        // Helper function to get all elements matching a selector
        function getAll(selector) {
            return Array.prototype.slice.call(document.querySelectorAll(selector), 0);
        }

        // Helper function to close all dropdowns
        function closeDropdowns() {
            $dropdowns.forEach(function ($el) {
                $el.classList.remove('is-active');
            });
        }
    });
</script>

</html>